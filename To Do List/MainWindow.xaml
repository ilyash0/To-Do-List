<Window x:Class="To_Do_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Список дел"
        Height="460"
        Width="400"
        Background="#FFFDFAF1"
        Icon="/images/icon.png">
    <Window.Resources>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns"
                    Value="False">
            </Setter>
            <Setter Property="CanUserDeleteRows"
                    Value="False">
            </Setter>
            <Setter Property="CanUserAddRows"
                    Value="False">
            </Setter>
            <Setter Property="HeadersVisibility"
                    Value="None">
            </Setter>
            <Setter Property="AlternatingRowBackground"
                    Value="White">
            </Setter>
            <Setter Property="RowBackground"
                    Value="#FFFDFAF1">
            </Setter>
            <Setter Property="GridLinesVisibility"
                    Value="Horizontal">
            </Setter>
            <Setter Property="HorizontalGridLinesBrush"
                    Value="#5EBEC4">
            </Setter>
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New"
                        Executed="OpenAddTaskWindow" />
        <CommandBinding Command="ApplicationCommands.Delete"
                        Executed="DeleteTask_Executed" />
        <CommandBinding Command="ApplicationCommands.Save"
                        Executed="SaveTxtFile" />
    </Window.CommandBindings>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Список дел"
                   FontSize="26"
                   VerticalAlignment="Center"
                   Style="{StaticResource HeaderStyle}" />

        <Button x:Name="buttonSave"
                Click="SaveTxtFile"
                Grid.Column="1"
                Grid.Row="0"
                Margin="2">
            <Image Source="/save.png"
                   MaxWidth="20px" />
        </Button>

        <Button x:Name="buttonAdd"
                Command="ApplicationCommands.New"
                Grid.Column="3"
                Grid.Row="0"
                Margin="2">
            <Button.ToolTip>
                <ToolTip Content="При добавлении дело появится в списке слева, и его придется выполнить" />
            </Button.ToolTip>
            <Image Source="/images/add.png"
                   MaxWidth="20px" />
        </Button>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="5"
                      Grid.ColumnSpan="3"
                      Grid.Row="1">
            <ListBox x:Name="listToDo"
                     Background="#FDF5DF"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     HorizontalContentAlignment="Stretch">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="FontWeight"
                                        Value="Bold">
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <CheckBox x:Name="CheckBoxDoing"
                                      VerticalAlignment="Center"
                                      Margin="5"
                                      Click="CheckBoxDoing_Click"
                                      IsChecked="{Binding Path = Doing}" />

                            <TextBlock Text="{Binding Path=Name}"
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource StrikethroughText}" />

                            <TextBlock Text="{Binding Path=Date, StringFormat=dd.MM.yyyy}"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource DataColor}" />

                            <Button Background="#5EBEC4"
                                    Click="ButtonDelete_Click"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Margin="5 0">
                                <Image Source="/images/delete.png"
                                       MaxWidth="10px" />
                            </Button>

                            <TextBlock FontSize="10"
                                       Text="{Binding Path=Description}"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       Grid.ColumnSpan="3" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <ProgressBar x:Name="progressBar"
                     Grid.ColumnSpan="3"
                     Grid.Row="2" />

        <TextBlock Grid.ColumnSpan="2"
                   Grid.Row="2"
                   Text=""
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   x:Name="textBlockProgressBar" />
    </Grid>
</Window>
