<Window x:Class="To_Do_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Список дел"
        Height="460"
        Width="400"
        Background="#FFFDFAF1"
        Icon="/images/icon.png">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Список дел"
                   FontSize="26"
                   VerticalAlignment="Center" />

        <Button x:Name="buttonAdd"
                Click="ButtonAdd_Click"
                Padding="5"
                HorizontalAlignment="Center"
                Background="#5EBEC4"
                Foreground="Black"
                Margin="5"
                Grid.Column="1"
                Grid.Row="0">
            <Button.ToolTip>
                <ToolTip Content="При добавлении дело появится в списке слева, и его придется выполнить" />
            </Button.ToolTip>
            <Image Source="/images/add.png"
                   MaxWidth="15px" />

        </Button>

        <DataGrid Name="listToDo"
                  Background="#FDF5DF"
                  Margin="5"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="None">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Click="CheckBoxDoing_Click"
                                      IsChecked="{Binding Path = Doing}"></CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="2*"
                                    Binding="{Binding Path = Name}" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Path = Date, StringFormat = dd.MM.yyyy}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="#5EBEC4"
                                    Foreground="Black"
                                    Padding="2"
                                    Click="ButtonDelete_Click">
                                <Image Source="/images/delete.png"
                                       MaxWidth="10px" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path = Description}"></TextBlock>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Window>
