<Window x:Class="To_Do_List.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Добавление нового дела"
        Height="450"
        Width="400"
        Background="#FFFDFAF1">
    
    <Window.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="SelectedDateFormat"
                    Value="Long">
            </Setter>
            <Setter Property="BorderThickness"
                    Value="1.5">
            </Setter>
            <Setter Property="BorderBrush"
                    Value="#5EBEC4">
            </Setter>
            <Setter Property="Background"
                    Value="White">
            </Setter>
            <Setter Property="CalendarStyle"
                    Value="{StaticResource CalendarStyle}">
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="24"
                   HorizontalAlignment="Center"
                   Style="{StaticResource HeaderStyle}">Новое дело</TextBlock>

        <GroupBox x:Name="groupBoxToDo"
                  Grid.Row="1"
                  Margin="5"
                  Background="#FDF5DF">
            <StackPanel Margin="10">
                <TextBlock Margin="0,0,0,5">Название:</TextBlock>
                <TextBox x:Name="titleToDo" />

                <TextBlock Margin="0,10,0,5">Выполнить до:</TextBlock>
                <DatePicker x:Name="dateToDo" />

                <TextBlock Margin="0,10,0,5">Описание:</TextBlock>
                <TextBox x:Name="descriptionToDo"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         MaxLines="9" />
            </StackPanel>
        </GroupBox>

        <Button x:Name="buttonSave"
                Click="ButtonSave_Click"
                Content="Сохранить дело"
                HorizontalAlignment="Center"
                Margin="5"
                Grid.Column="2"
                Grid.Row="2">
        </Button>
    </Grid>
</Window>
