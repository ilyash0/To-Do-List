<Window x:Class="To_Do_List.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Добавление нового дела"
        Height="450"
        Width="400"
        Background="#FFFDFAF1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="24"
                   HorizontalAlignment="Center">Новое дело</TextBlock>

        <GroupBox x:Name="groupBoxToDo"
                  Grid.Row="1"
                  Margin="5"
                  Background="#FDF5DF">
            <StackPanel Margin="10">
                <TextBlock Margin="0,0,0,5">Название:</TextBlock>
                <TextBox x:Name="titleToDo" />

                <TextBlock Margin="0,10,0,5">Выполнить до:</TextBlock>
                <DatePicker x:Name="dateToDo" />

                <TextBlock Margin="0,10,0,5">Описание:</TextBlock>
                <TextBox x:Name="descriptionToDo"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         MinLines="10"
                         MaxLines="10"
                         MinHeight="161.6px" />
            </StackPanel>
        </GroupBox>

        <Button x:Name="buttonSave"
                Click="ButtonSave_Click"
                Content="Сохранить дело"
                Padding="5"
                HorizontalAlignment="Center"
                Background="#5EBEC4"
                Foreground="Black"
                Margin="5"
                Grid.Column="2"
                Grid.Row="2">
        </Button>
    </Grid>
</Window>
